@model tp03_2021.Models.Cadete
<h1>Datos del cadete</h1>
<div class="container-sm w-100 bg-light d-flex justify-content-center">
    <form asp-action="CrearCadete" method="post" class="row col-lg-5 p-lg-4" role="form">

        <div class="form-group d-flex justify-content-center">

            <input asp-for="Id" type="hidden" class="form-control" />

        </div>
        <div class="form-group d-flex justify-content-center">
            <label asp-for="Nombre" class="col-sm-5 col-form-label"></label>
            <div class="col-xl-12">
                <input asp-for="Nombre" type="text" class="form-control" placeholder="Juan"/>
            </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <label asp-for="Direccion" class="col-sm-5 col-form-label"></label>
            <div class="col-xl-12">
                <input asp-for="Direccion" type="text" class="form-control" placeholder="Roca 123"/>
            </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <label asp-for="Telefono" class="col-sm-5 col-form-label"></label>
            <div class="col-xl-12">
                <input asp-for="Telefono" type="number" class="form-control" placeholder="3814567725"/>
            </div>
        </div>
        
        <div class="col-12 d-flex justify-content-center">
            <input type="submit" class="btn-success" value="Enviar" />
        </div>
    </form>
</div>
    <div>
        <a asp-controller="Cadete" asp-action="Index">Ver lista de cadetes</a>
    </div>
